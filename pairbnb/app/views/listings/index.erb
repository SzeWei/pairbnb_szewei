<h1>All My Listings</h1>

<% if @user.role == "superadmin" || @user.role == "landlord" %>
	<%= link_to "Add New Listing", new_listing_path %>
<% end %>


<% @listings.each do |listing| %>
	<% if current_user.id == listing.user_id %>
		<% if listing.reservations.any? %>
			<h3><a href="/listings/<%= listing.id %>"><%= listing.name %></a></br></h3>
			<% listing.reservations.each do |reservation| %>
			<h3>Reservation Id | User Id | Check-In Date | Check-Out Date |
			</h3>
			<h4><a href= "/listings/<%= listing.id %>/reservations/<%= reservation.id %>"><%= reservation.id %></a>
			</br></h4>
			<%= reservation.user_id %> <%= reservation.check_in %> <%= reservation.check_out %></br>
			<% end %>	
		<% end %>		
	<% elsif current_user.id != listing.user_id %>
		<h4><a href="/listings/<%= listing.id %>">
		<%= listing.name %></a></br></h4>
		<h5>
		<%= listing.description %>
		<%= listing.address %>
		<%= listing.price %>
		</h5>
	<% end %>	
<% end %>	

<%= will_paginate @listings %>
